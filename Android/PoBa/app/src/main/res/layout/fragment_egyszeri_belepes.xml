<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BejelentkezesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/felhasznalonev_textView"
        android:text="@string/egybefel_szoveg"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="230dp"
        android:textStyle="italic"
        android:textColor="@color/text_color"
        android:layout_marginBottom="5dp"
        />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:id="@+id/felhasznalonev_input"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@+id/felhasznalonev_textView"
        android:layout_centerHorizontal="true"
        android:autofillHints="felhasználó1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jelszo_textView"
        android:text="@string/egybejel_szoveg"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/text_color"
        android:layout_below="@+id/felhasznalonev_input"
        android:layout_margin="5dp"
        />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:inputType="textPassword"
        android:id="@+id/jelszo_input"
        android:textAlignment="center"
        android:layout_below="@+id/jelszo_textView"
        android:layout_centerHorizontal="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/interactive_buttons"
        android:layout_below="@+id/jelszo_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/begombfelirat"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:id="@+id/egyszeri_belepes_gomb"
        />

</RelativeLayout>