<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navhost"
    app:startDestination="@id/belepesFragment">
    <fragment
        android:id="@+id/belepesFragment"
        android:name="com.example.poba.Fragments.BejelentkezesFragment"
        android:label="EgyszeriBelepesFragment"
        tools:layout="@layout/fragment_bejelentkezes">
        <action
            android:id="@+id/action_belepesFragment_to_egyszeriBejelentkezesFragment"
            app:destination="@id/egyszeriBejelentkezesFragment" />
    </fragment>
    <fragment
        android:id="@+id/egyszeriBejelentkezesFragment"
        android:name="com.example.poba.Fragments.EgyszeriBelepesFragment"
        android:label="fragment_egyszeri_belepes"
        tools:layout="@layout/fragment_egyszeri_belepes" >
        <action
            android:id="@+id/action_egyszeriBejelentkezesFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.poba.Fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
</navigation>