<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navhost"
    app:startDestination="@id/loginActivity">
    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.pobatest.BejelentkezesActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_bejelentkezes" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.pobatest.FoActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_fo" />
    <activity
        android:id="@+id/onceLoginActivity"
        android:name="com.example.pobatest.EgyszeriBelepesActivity"
        android:label="activity_once_login"
        tools:layout="@layout/activity_egyszeri_belepes" />
    <action
        android:id="@+id/loginToOnceLogin"
        app:destination="@id/onceLoginActivity"
        app:enterAnim="@animator/nav_default_pop_enter_anim"
        app:exitAnim="@animator/nav_default_pop_exit_anim"/>
</navigation>