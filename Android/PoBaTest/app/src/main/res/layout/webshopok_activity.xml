<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Webshopok.WebShopokActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_vissza_gomb"
        android:contentDescription="nav_vissza_gomb"
        android:id="@+id/nav_vissza_gomb"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="WEBSHOPOK"
        android:textSize="25sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/inter_light"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/nav_vissza_gomb"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:shadowColor="@color/shadow"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_vissza_gomb"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/recyclerview_webshopok"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/card_back"
        android:layout_centerHorizontal="true"
        android:id="@+id/minta_rendeles"
        android:layout_below="@+id/recyclerview_webshopok"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/cardview_light_background"
            >

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/plusz_icon"
                android:id="@+id/plusz_webshop_gomb"
                />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>