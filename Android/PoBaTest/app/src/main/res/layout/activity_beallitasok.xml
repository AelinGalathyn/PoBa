<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeallitasokActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="122dp"
        android:src="@drawable/nav_vissza_gomb"
        android:contentDescription="nav_vissza_gomb"
        android:id="@+id/nav_vissza_gomb"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEÁLLíTÁSOK"
        android:textSize="25sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/inter_light"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/nav_vissza_gomb"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:shadowColor="@color/shadow"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ertesitesek_beallitas_gomb"
        android:layout_below="@+id/nav_vissza_gomb"
        android:layout_marginTop="100dp"
        android:id="@+id/ertesitesek_beallitasok_gomb"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/megjelenes_beallitas_gomb"
        android:layout_below="@+id/ertesitesek_beallitasok_gomb"
        android:layout_marginTop="10dp"
        android:id="@+id/megjelenes_beallitasok_gomb"
        />

</RelativeLayout>