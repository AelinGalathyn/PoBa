<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/rendelesek_card"
            >

            <ImageView
                android:id="@+id/rendelesek_preview"
                android:layout_width="230dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/shadow"
                android:layout_marginTop="10dp"
                android:contentDescription="rendelesek_preview"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@null"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="RENDELÉSEK"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@color/cardview_light_background"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/rendelesek_card"
            app:cardCornerRadius="10dp"
            android:id="@+id/termekek_card"
            >

            <ImageView
                android:id="@+id/termekek_preview"
                android:layout_width="230dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/shadow"
                android:layout_marginTop="10dp"
                android:contentDescription="termekek_preview"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@null"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="TERMÉKEK"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@color/cardview_light_background"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>