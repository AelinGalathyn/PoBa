<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ideiglenes_termek_kep"
        android:id="@+id/termek_kep_helye"
        android:layout_marginStart="15dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="60sp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/card_back"
        android:layout_alignParentEnd="true"
        android:id="@+id/minta_termek"
        android:layout_marginEnd="25dp"
        android:layout_centerVertical="true"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="50sp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/cardview_light_background"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CsirkÃ©s Tortilla Sajtos"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:id="@+id/termek_nev_textView"
                android:background="@color/cardview_light_background"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end|center"
                android:layout_marginEnd="10dp"
                android:id="@+id/darab_icon_helye"
                />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>