<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Rendeles.EgyikRendelesActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_vissza_gomb"
        android:contentDescription="nav_vissza_gomb"
        android:id="@+id/nav_vissza_gomb"
        />

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nav_vissza_gomb"
        android:id="@+id/rendeles_szam_icon_relativeLayout"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/inter_light"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="10dp"
            android:shadowColor="@color/shadow"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:id="@+id/rendeles_szam_textView"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/kiszallito_icon"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="520dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/card_back"
        android:layout_centerHorizontal="true"
        android:id="@+id/minta_rendeles"
        android:layout_below="@+id/rendeles_szam_icon_relativeLayout"
        android:layout_marginTop="30dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="510dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rendeloi_adatok_textview"
                    android:background="@color/cardview_light_background"
                    android:fontFamily="@font/space_mono"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:paddingTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/space_mono"
                    android:textColor="@color/text_color"
                    android:background="@color/cardview_light_background"
                    android:id="@+id/rendeles_reszletek_textview"
                    android:paddingTop="20dp"
                    android:layout_below="@+id/rendeloi_adatok_textview"
                    android:isScrollContainer="true"
                    android:paddingHorizontal="15dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/cardview_light_background"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/csomagolt_icon"
                    android:src="@drawable/csomagolt_icon"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentStart="true"
                    />

                <ImageView
                    android:id="@+id/feladott_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/feladott_icon"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>