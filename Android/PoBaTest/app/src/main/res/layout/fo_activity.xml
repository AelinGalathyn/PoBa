<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/HamburgerMenuColor"
    android:id="@+id/hamburger_drawerLayout"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Base.Theme.PoBaTest"
        android:id="@+id/fo_relativelayout"
        >

        <ImageView
            android:id="@+id/nav_profil_gomb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="nav_profil_gomb"
            android:src="@drawable/nav_profil_gomb" />

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/card_back"
            android:id="@+id/rendelesek_card"
            android:layout_below="@+id/nav_profil_gomb"
            >

            <ImageView
                android:id="@+id/rendelesek_preview"
                android:layout_width="230dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rendelesek_placeholder"
                android:layout_marginTop="10dp"
                android:contentDescription="rendelesek_preview"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@null"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="RENDELÉSEK"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@color/cardview_light_background"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/rendelesek_card"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/card_back"
            android:id="@+id/termekek_card"
            >

            <ImageView
                android:id="@+id/termekek_preview"
                android:layout_width="230dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/termekek_placeholder"
                android:layout_marginTop="10dp"
                android:contentDescription="termekek_preview"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@null"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="TERMÉKEK"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@color/cardview_light_background"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_hamburger_menu"
        app:headerLayout="@layout/hamburger_header_layout"
        app:menu="@menu/hamburger_menu"
        app:itemTextColor="@color/text_color"
        app:itemIconTint="@color/text_color"
        app:itemBackground="@color/background_yellow"
        />


</androidx.drawerlayout.widget.DrawerLayout>