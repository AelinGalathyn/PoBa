<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/HamburgerMenuColor"
    android:id="@+id/hamburger_drawerLayout"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Base.Theme.PoBaTest"
        android:id="@+id/fo_relativelayout"
        >

        <ImageView
            android:id="@+id/nav_profil_gomb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="nav_profil_gomb"
            android:src="@drawable/nav_profil_gomb"
            />

        <FrameLayout
            android:id="@+id/fo_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/nav_profil_gomb"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_hamburger_menu"
        app:headerLayout="@layout/hamburger_header_layout"
        app:menu="@menu/hamburger_menu"
        app:itemTextColor="@color/text_color"
        app:itemIconTint="@color/text_color"
        app:itemBackground="@color/background_yellow"
        />


</androidx.drawerlayout.widget.DrawerLayout>