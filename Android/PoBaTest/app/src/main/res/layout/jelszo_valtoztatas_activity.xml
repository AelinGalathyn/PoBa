<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bejelentkezes.EgyszeriBelepesActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_vissza_gomb"
        android:contentDescription="nav_vissza_gomb"
        android:id="@+id/nav_vissza_gomb"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jelszo_textView"
        android:text="Régi jelszó"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="230dp"
        android:fontFamily="monospace"
        android:textStyle="italic"
        android:textColor="@color/text_color"
        android:layout_marginBottom="5dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="230dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/card_back"
        android:layout_centerHorizontal="true"
        android:id="@+id/jelszo_input_card"
        android:layout_below="@+id/jelszo_textView"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            >

            <EditText
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@null"
                android:id="@+id/regi_jelszo_input"
                android:inputType="text"
                android:textAlignment="center"
                android:padding="5dp"
                />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jelszo_ujra_textView"
        android:text="Új jelszó"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textStyle="italic"
        android:textColor="@color/text_color"
        android:layout_below="@+id/jelszo_input_card"
        android:layout_margin="5dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="230dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/card_back"
        android:layout_centerHorizontal="true"
        android:id="@+id/jelszo_ujra_input_card"
        android:layout_below="@+id/jelszo_ujra_textView"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            >

            <EditText
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@null"
                android:inputType="textPassword"
                android:id="@+id/uj_jelszo_input"
                android:textAlignment="center"
                android:padding="5dp"
                />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ok_gomb"
        android:layout_below="@+id/jelszo_ujra_input_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/password_ok_button"
        />


</RelativeLayout>