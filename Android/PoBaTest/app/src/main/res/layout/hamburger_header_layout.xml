<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/navigation_green"
    android:layout_marginTop="20dp"
    android:id="@+id/hamburger_header_layout"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="82dp"
        android:src="@drawable/nav_profil"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:background="@color/navigation_green"
        android:id="@+id/nav_profil"
        />

    <Spinner
        android:id="@+id/hamburger_webshopHely"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/nav_profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:spinnerMode="dropdown"
        android:background="@drawable/hamburger_webshopokhely"
        android:dropDownWidth="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_vonal"
        android:background="@color/navigation_green"
        android:layout_below="@+id/hamburger_webshopHely"
        android:layout_marginTop="5dp"
        android:backgroundTintMode="multiply"
        android:backgroundTint="@color/background_yellow"
        />

</RelativeLayout>